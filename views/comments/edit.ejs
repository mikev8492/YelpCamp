<% include ../partials/header %>

  <div class="row">

    <h1 style="text-align: center;">Edit comment</h1>

    <div style="width: 30%; margin: 30px auto">
      <!-- created campground_id in comments route file -->
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text-area" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit" name="new">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>

  </div>

<% include ../partials/footer %>
